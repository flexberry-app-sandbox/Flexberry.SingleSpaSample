<h3 class="ui header">{{t "forms.t-v-single-spa-sample-chat-bot-message-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.t-v-single-spa-sample-chat-bot-message-e.dateTime-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.dateTime
      class=(if (v-get validationModel "dateTime" "isInvalid") "error")
      data-test-t-v-single-spa-sample-chat-bot-message-e-dateTime=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "dateTime" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.text
      class=(if (v-get validationModel "text" "isInvalid") "error")
      label=(t "forms.t-v-single-spa-sample-chat-bot-message-e.text-caption")
      data-test-t-v-single-spa-sample-chat-bot-message-e-text=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "text" "message")}}
  </div>
  <div class="field" data-test-t-v-single-spa-sample-chat-bot-message-e-chatMessageType="true">
    <label>{{t "forms.t-v-single-spa-sample-chat-bot-message-e.chatMessageType-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "t-v-single-spa-sample-chat-message-type")
      value=model.chatMessageType
      class=(if (v-get validationModel "chatMessageType" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "chatMessageType" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.t-v-single-spa-sample-chat-bot-message-e.person-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.person
      displayAttributeName="esiaId"
      autocomplete=true
      relationName="person"
      projection="PersonL"
      title=(t "forms.t-v-single-spa-sample-chat-bot-message-e.person-caption")
      readonly=readonly
      componentName="personLookup"
      class=(if (v-get validationModel "person" "isInvalid") "error")
      data-test-t-v-single-spa-sample-chat-bot-message-e-person=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "person" "message")}}
  </div>
</form>
