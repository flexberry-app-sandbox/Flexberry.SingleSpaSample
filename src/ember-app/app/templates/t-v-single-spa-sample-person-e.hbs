<h3 class="ui header">{{t "forms.t-v-single-spa-sample-person-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.esiaId
      class=(if (v-get validationModel "esiaId" "isInvalid") "error")
      label=(t "forms.t-v-single-spa-sample-person-e.esiaId-caption")
      data-test-t-v-single-spa-sample-person-e-esiaId=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "esiaId" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.name
      class=(if (v-get validationModel "name" "isInvalid") "error")
      label=(t "forms.t-v-single-spa-sample-person-e.name-caption")
      data-test-t-v-single-spa-sample-person-e-name=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "name" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.middleName
      class=(if (v-get validationModel "middleName" "isInvalid") "error")
      label=(t "forms.t-v-single-spa-sample-person-e.middleName-caption")
      data-test-t-v-single-spa-sample-person-e-middleName=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "middleName" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.surname
      class=(if (v-get validationModel "surname" "isInvalid") "error")
      label=(t "forms.t-v-single-spa-sample-person-e.surname-caption")
      data-test-t-v-single-spa-sample-person-e-surname=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "surname" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.t-v-single-spa-sample-person-e.birthday-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.birthday
      class=(if (v-get validationModel "birthday" "isInvalid") "error")
      data-test-t-v-single-spa-sample-person-e-birthday=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "birthday" "message")}}
  </div>
  <div class="field" data-test-t-v-single-spa-sample-person-e-sex="true">
    <label>{{t "forms.t-v-single-spa-sample-person-e.sex-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "t-v-single-spa-sample-sex")
      value=model.sex
      class=(if (v-get validationModel "sex" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "sex" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.reputation
      class=(if (v-get validationModel "reputation" "isInvalid") "error")
      label=(t "forms.t-v-single-spa-sample-person-e.reputation-caption")
      data-test-t-v-single-spa-sample-person-e-reputation=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "reputation" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.t-v-single-spa-sample-person-e.personAccount-caption"}}</label>
    {{flexberry-groupedit
      componentName="personAccountGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.personAccount
      content=model.personAccount
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "personAccount" "isInvalid") "error")
      data-test-t-v-single-spa-sample-person-e-personAccount=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "personAccount" "message")}}
  </div>
</form>
